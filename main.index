<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>GitHub 在线聊天室</title>
  <style>
    body { font-family: Arial; padding: 20px; }
    #chat { height: 300px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px; margin-bottom: 10px; }
    #msg { width: 80%; }
  </style>
</head>
<body>
  <h2>🌐 GitHub Pages 聊天室</h2>
  <div id="chat"></div>
  <input type="text" id="msg" placeholder="输入消息..." autofocus />
  <button onclick="send()">发送</button>

  <script>
    const username = "用户" + Math.floor(Math.random() * 1000);
    const chat = document.getElementById("chat");
    const ws = new WebSocket("wss://ws.ifelse.io"); // 公共WebSocket服务

    ws.onopen = () => {
      log("已连接服务器。欢迎来到聊天室！");
    };

    ws.onmessage = (event) => {
      log(event.data);
    };

    function send() {
      const input = document.getElementById("msg");
      const text = input.value.trim();
      if (text) {
        const msg = `${username}: ${text}`;
        ws.send(msg);
        input.value = "";
      }
    }

    function log(message) {
      const div = document.createElement("div");
      div.textContent = message;
      chat.appendChild(div);
      chat.scrollTop = chat.scrollHeight;
    }

    document.getElementById("msg").addEventListener("keydown", e => {
      if (e.key === "Enter") send();
    });
  </script>
</body>
</html>
